<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_child_activity"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@color/colorTeal"
                android:fontFamily="monospace"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingRight="100dp"
                android:paddingStart="25dp"
                android:textSize="@dimen/title_text_size"
                tools:text="@string/toolstext_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_poster_child_astivity"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/discription" />

                <TextView
                    android:id="@+id/tv_releaseDate_child_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@id/iv_poster_child_astivity"
                    android:layout_toRightOf="@+id/iv_poster_child_astivity"
                    android:textSize="@dimen/releasedate_text_size" />

                <TextView
                    android:id="@+id/tv_length_child_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_releaseDate_child_activity"
                    android:layout_below="@+id/tv_releaseDate_child_activity"
                    android:layout_marginTop="15dp"
                    android:textSize="@dimen/length_text_size"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/tv_voteReverage_child_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_length_child_activity"
                    android:layout_below="@+id/tv_length_child_activity"
                    android:layout_marginTop="15dp"
                    android:textSize="@dimen/vote_text_size" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/favorite_border"
                    android:layout_alignLeft="@id/tv_voteReverage_child_activity"
                    android:layout_below="@+id/tv_voteReverage_child_activity"
                    android:layout_marginTop="15dp"
                    android:visibility="visible"
                    android:id="@+id/favorate_Button_pressed"
                    />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/favorite_black_"
                    android:layout_alignLeft="@id/tv_voteReverage_child_activity"
                    android:layout_below="@+id/tv_voteReverage_child_activity"
                    android:layout_marginTop="15dp"
                    android:visibility="invisible"
                    android:id="@+id/favorate_Button_notPressed"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="@dimen/overview_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/title_trailers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:text="@string/title_trailers"
                    android:textSize="@dimen/title_trailers_text_size" />

                <ImageButton
                    android:id="@+id/trailer1_play_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/title_trailers"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="22dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/white"
                    android:onClick="ChildActivity.onClick"
                    android:scaleType="centerCrop"
                    android:src="@drawable/play_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/trailer1_play_button"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@id/trailer1_play_button"
                    android:text="@string/trailer1_title"
                    android:textSize="@dimen/subtitle_triler_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="140dp"
                    android:background="@android:color/darker_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <ImageButton
                    android:id="@+id/trailer2_play_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="22dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/white"
                    android:onClick="ChildActivity.onClick"
                    android:scaleType="centerCrop"
                    android:src="@drawable/play_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/trailer2_play_button"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@id/trailer2_play_button"
                    android:text="@string/trailer2_title"
                    android:textSize="@dimen/subtitle_triler_text_size" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="90dp"
                    android:background="@android:color/darker_gray" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <TextView
                    android:id="@+id/review_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/userReview_title"
                    tools:text="User reviews:"
                    android:layout_marginTop="15dp"
                    android:textSize="@dimen/userReviewTitle_text_size"/>
                <TextView
                    android:id="@+id/tv_userReviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textSize="@dimen/userReview_text_size" />
                <!--TODO I made two LinearLayout for trailers, but its quite possible to use recycleView to display trailers, -->
                <!--because some movies have more than one trailer-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
